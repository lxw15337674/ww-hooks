{
  "name": "wwhooks-monorepo",
  "version": "1.0.0",
  "scripts": {
    "dev:wwhooks": "pnpm -r --filter=./packages/wwhooks run dev",
    "build:wwhooks": "pnpm -r --filter=./packages/wwhooks run build",
    "docs:wwhooks": "pnpm -r --filter=./packages/wwhooks run docs:build",
    "dev:wwutils": "pnpm -r --filter=./packages/wwutils run dev",
    "build:wwutils": "pnpm -r --filter=./packages/wwutils run build",
    "docs:wwutils": "pnpm -r --filter=./packages/wwutils run docs:build"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/src/index.d.ts",
  "types": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@babel/preset-react": "^7.18.6",
    "@faker-js/faker": "^7.4.0",
    "@types/lodash": "^4.14.184",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "@umijs/test": "^4.0.13",
    "antd": "^4.22.7",
    "autoprefixer": "^10.4.8",
    "babel-plugin-import": "^1.13.5",
    "cz-conventional-changelog": "^3.3.0",
    "dumi": "^2",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-alloy": "^4.6.2",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "father": "^4",
    "gh-pages": "^4.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
